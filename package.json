{
  "scripts": {
    "build:dev:watch": "npm run dev:rollup:build:watch",
    "build:dev": "npm run dev:rollup:build",
    "build:prod": "npm run build:dev",
    "build": "npm run build:prod",
    "cake:build": "cake build",
    "cake:watch": "cake watch",
    "cake:zip": "cake zip",
    "dev:browser-tabs": "open https://youtube.com",
    "dev:eslint:fix": "npm run dev:eslint -- --fix",
    "dev:eslint": "eslint --ext .js src ./*.js",
    "dev:localtunnel": "lt --port ${PORT:-3000}",
    "dev:prettier:fix": "npm run dev:prettier -- --fix",
    "dev:prettier": "prettier --write src ./*.{md,js,json}",
    "dev:rollup:build:watch": "npm run dev:rollup:build -- --watch",
    "dev:rollup:build": "npm run dev:rollup --",
    "dev:rollup": "rollup --config rollup.config.js",
    "dev:serve": "serve --listen ${PORT:-3000}",
    "dev": "concurrently npm:build:dev:watch npm:start:dev npm:dev:browser-tabs",
    "format": "npm run dev:prettier:fix",
    "lint:fix": "npm run dev:eslint:fix",
    "lint": "npm run dev:eslint",
    "pkg:zip": "zip --quiet --recurse-paths release/popout_for_youtube-$(jq -cr .version manifest.json).zip _locales images lib analytics.js LICENSE manifest.json popout.html popout_for_youtube.css README.md",
    "pkg": "npm run pkg:zip",
    "prepare": "npm run format && npm run lint:fix",
    "release:unsafe": "npm run build && npm run pkg && ls -lt release",
    "release": "npm run prepare && npm run release:unsafe",
    "start:dev": "concurrently npm:dev:serve npm:dev:localtunnel",
    "start:prod": "npm run start:dev",
    "start": "npm run start:prod",
    "zip": "npm run rollup:zip"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "localtunnel": "^2.0.2",
    "node-jq": "^2.0.0",
    "prettier": "^2.4.1",
    "rollup": "^2.59.0",
    "serve": "^13.0.2"
  }
}
